<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="com.example.finalapp.CMAppGlideModule"
        android:value="AppGlideModule" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.VideoPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            ></activity>
        <activity android:name=".activity.SetSecurityActivity" />
        <activity android:name=".activity.MovieTypeActivity" />
        <activity android:name=".activity.SearchResultActivity" />
        <activity android:name=".activity.MovieInfoActivity" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.PlayHistoryActivity" />
        <activity android:name=".activity.UserInfoActivity" />
        <activity android:name=".activity.FindpwdActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>